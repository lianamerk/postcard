---
import Sidebar from '../components/Sidebar.astro';
import CategoryGallery from '../components/CategoryGallery.astro';
import metadata from '../data/metadata.json';
import '../styles/global.css';

export async function getStaticPaths() {
  return metadata.categories.map((category) => ({
    params: { category: category.folder },
    props: { categoryData: category },
  }));
}

const { category } = Astro.params;
const { categoryData } = Astro.props;
const categories = metadata.categories;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={`Postcards in ${categoryData?.name || category}`} />
    <title>{categoryData?.name || category} - Postcard Gallery</title>
  </head>
  <body>
    <Sidebar categories={categories} currentCategory={category} />
    <main class="main-content">
      {categoryData && (
        <CategoryGallery postcards={categoryData.postcards} category={categoryData.folder} />
      )}
    </main>
  </body>
</html>

<style is:global>
  .lightbox {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    z-index: 1000;
    overflow: auto;
    padding: 2rem;
  }

  .lightbox.active {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lightbox-content {
    position: relative;
    max-width: 90vw;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    background: transparent;
    padding: 0;
  }

  .lightbox-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.5);
    border: none;
    color: white;
    font-size: 3rem;
    cursor: pointer;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.5s, background 0.2s, transform 0.2s;
    z-index: 1001;
    border-radius: 50%;
    opacity: 0;
  }

  .lightbox.active .lightbox-nav {
    opacity: 1;
  }

  .lightbox-nav:hover {
    background: rgba(0, 0, 0, 0.8);
    transform: translateY(-50%) scale(1.1);
    opacity: 1 !important;
  }

  .lightbox-prev {
    left: 2rem;
  }

  .lightbox-next {
    right: 2rem;
  }

  /* Fade out arrows when mouse is idle */
  .lightbox.idle .lightbox-nav {
    opacity: 0;
  }

  @media (max-width: 768px) {
    .lightbox-nav {
      width: 2.5rem;
      height: 2.5rem;
      font-size: 2rem;
    }

    .lightbox-prev {
      left: 0.5rem;
    }

    .lightbox-next {
      right: 0.5rem;
    }
  }

  .lightbox-images {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    max-width: 100%;
    background: transparent;
  }

  .lightbox-image-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    background: transparent;
    align-items: center;
  }

  .lightbox-image {
    max-width: 100%;
    max-height: 70vh;
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 0;
    background: transparent;
    padding: 0;
    margin: 0;
    border: none;
    box-shadow: none;
    display: block;
  }


  @media (max-width: 768px) {
    .lightbox-images {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .lightbox-content {
      padding: 1rem;
    }

    .lightbox {
      padding: 1rem;
    }
  }
</style>

<style>
  .main-content {
    margin-top: 50px;
    min-height: calc(100vh - 50px);
  }

  @media (max-width: 768px) {
    .main-content {
      margin-left: 0;
    }
  }
</style>

---
import Sidebar from '../components/Sidebar.astro';
import metadata from '../data/metadata.json';
import '../styles/global.css';

const categories = metadata.categories;
---

<style is:global>
  .lightbox {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    z-index: 1000;
    overflow: auto;
    padding: 2rem;
  }

  .lightbox.active {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .lightbox-content {
    position: relative;
    max-width: 90vw;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    background: transparent;
    padding: 0;
  }

  .lightbox-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.5);
    border: none;
    color: white;
    font-size: 3rem;
    cursor: pointer;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.5s, background 0.2s, transform 0.2s;
    z-index: 1001;
    border-radius: 50%;
    opacity: 0;
  }

  .lightbox.active .lightbox-nav {
    opacity: 1;
  }

  .lightbox-nav:hover {
    background: rgba(0, 0, 0, 0.8);
    transform: translateY(-50%) scale(1.1);
    opacity: 1 !important;
  }

  .lightbox-prev {
    left: 2rem;
  }

  .lightbox-next {
    right: 2rem;
  }

  .lightbox-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0, 0, 0, 0.5);
    border: none;
    color: white;
    font-size: 2.5rem;
    cursor: pointer;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.5s, background 0.2s, transform 0.2s;
    z-index: 1002;
    border-radius: 50%;
    line-height: 1;
    padding: 0;
    opacity: 0;
  }

  .lightbox.active .lightbox-close {
    opacity: 1;
  }

  .lightbox-close:hover {
    background: rgba(0, 0, 0, 0.8);
    transform: scale(1.1);
    opacity: 1 !important;
  }

  /* Fade out arrows and close button when mouse is idle */
  .lightbox.idle .lightbox-nav,
  .lightbox.idle .lightbox-close {
    opacity: 0;
  }

  @media (max-width: 768px) {
    .lightbox-nav {
      width: 2.5rem;
      height: 2.5rem;
      font-size: 2rem;
    }

    .lightbox-prev {
      left: 0.5rem;
    }

    .lightbox-next {
      right: 0.5rem;
    }
  }

  .lightbox-images {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    max-width: 100%;
    background: transparent;
  }

  .lightbox-image-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    background: transparent;
    align-items: center;
  }

  .lightbox-image {
    max-width: 100%;
    max-height: 70vh;
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 0;
    background: transparent;
    padding: 0;
    margin: 0;
    border: none;
    box-shadow: none;
    display: block;
  }


  @media (max-width: 768px) {
    .lightbox-images {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .lightbox-content {
      padding: 1rem;
    }

    .lightbox {
      padding: 1rem;
    }
  }
</style>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Interactive postcard gallery collection" />
    <title>Postcard Gallery</title>
  </head>
  <body>
    <Sidebar categories={categories} />
    <main class="main-content">
      <div class="home-container">
        <header class="home-header">
          <h1>Postcard Gallery</h1>
          <p class="subtitle">
            Explore {metadata.totalPostcards} postcards across {categories.length} categories
          </p>
        </header>
        <div class="category-grid">
          {categories.map((category) => {
            const base = import.meta.env.BASE_URL;
            const basePath = base.endsWith('/') ? base.slice(0, -1) : base;
            return (
            <a href={`${basePath}/${category.folder}`} class="category-card">
              <div class="category-preview">
                {category.postcards.length > 0 && (() => {
                  const base = import.meta.env.BASE_URL;
                  const basePath = base.endsWith('/') ? base.slice(0, -1) : base;
                  return (
                  <img 
                    src={`${basePath}/${category.folder}/${category.postcards[0].front}`}
                    alt={category.name}
                    loading="lazy"
                  />
                  );
                })()}
              </div>
              <div class="category-info">
                <h2>{category.name}</h2>
                <p>{category.postcards.length} postcards</p>
              </div>
            </a>
            );
          })}
        </div>
      </div>
    </main>
  </body>
</html>

<style>
  .main-content {
    margin-top: 50px;
    min-height: calc(100vh - 50px);
  }

  .home-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .home-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .home-header h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
    color: var(--text-color);
  }

  .subtitle {
    font-size: 1.25rem;
    color: #6c757d;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .category-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
    text-decoration: none;
    color: inherit;
  }

  .category-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    text-decoration: none;
  }

  .category-preview {
    width: 100%;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: #f8f9fa;
  }

  .category-preview img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .category-info {
    padding: 1.5rem;
  }

  .category-info h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-color);
  }

  .category-info p {
    color: #6c757d;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .main-content {
      margin-left: 0;
    }

    .home-container {
      padding: 2rem 1rem;
    }

    .home-header h1 {
      font-size: 2rem;
    }

    .category-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1.5rem;
    }
  }
</style>
